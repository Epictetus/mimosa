doctype 5
html
  head
    title= title

    - var urlCss = base + '/stylesheets/style.css'
    - if (!(env == 'production')) {urlCss += "?d=" + (new Date().getTime())}
    link(rel='stylesheet', href=urlCss)

    if optimize
      - var urlBuilt = base + '/javascripts/main-built.js'
      script(src=urlBuilt)
    else
      - var urlRequire = base + '/javascripts/vendor/require.js'
      - var urlMain = base + '/javascripts/main.js'
      script(src=urlRequire, data-main=urlMain)

    if reload
      script(src='/socket.io/socket.io.js')
      script(src='/socket-enable.js')

  body
    block content